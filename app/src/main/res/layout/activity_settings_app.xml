<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.SettingsApp">

    <TextView
            android:text="Ustawienia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/textView5"
            android:textSize="24sp" android:textStyle="normal|bold"/>
    <Button
            android:text="Wyczyść Bazę"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_marginTop="35dp"
            android:id="@+id/clean_db" android:backgroundTint="@color/colorAllert"
            android:textColor="@color/cardview_light_background"/>
    <TextView
            android:text="Autorzy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/clean_db"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_marginTop="40dp"
            android:id="@+id/textView7" android:textSize="18sp" android:textStyle="normal|bold"/>
    <TextView
            android:text="@string/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/textView7"
            android:layout_marginTop="24dp" android:id="@+id/textView8"/>
</RelativeLayout>
