<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_add_history_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.AddHistoryRepair"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:layout_marginTop="20dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_history_36dp"
                            android:id="@+id/imageView2" android:paddingLeft="10dp"/>
                    <TextView
                            android:text="Wykonano serwisowanie?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView" android:paddingLeft="10dp"
                            android:paddingTop="10dp" android:textColor="@color/colorText" android:textSize="18sp"
                    />
                </LinearLayout>
            </TableRow>
            <TabHost
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tabHost">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:dividerPadding="5dip"
                            style="@style/CustomTabWidgetText"/>

                    <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:id="@+id/tab1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                              android:orientation="vertical">
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginBottom="20dp">

                                        <TableRow
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <EditText
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:inputType="textPersonName"
                                                    android:ems="10"
                                                    android:id="@+id/editText"
                                                    android:background="@android:color/transparent"
                                                    android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                                                    android:paddingLeft="5dp" android:paddingRight="5dp"
                                                    android:textColorLink="@color/colorAccent" android:hint="Wykonana naprawa"
                                                    android:textColor="@color/colorEdittext"/>
                                        </TableRow>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp">

                                        <TableRow
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <EditText
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:inputType="textPersonName|date"
                                                    android:ems="10"
                                                    android:id="@+id/editText1"
                                                    android:background="@android:color/transparent"
                                                    android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                                                    android:paddingLeft="5dp" android:paddingRight="5dp"
                                                    android:textColorLink="@color/colorAccent" android:hint="Data"
                                                    android:textColor="@color/colorEdittext"/>
                                        </TableRow>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp"
                                    >

                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ems="10"
                                                android:id="@+id/editText2"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                                                android:paddingLeft="5dp" android:paddingRight="5dp"
                                                android:textColorLink="@color/colorAccent" android:hint="Przebieg"
                                                android:textColor="@color/colorEdittext" android:inputType="number"
                                        />
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginTop="20dp"
                                            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                                            android:layout_marginBottom="20dp">
                                        <Spinner
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" android:id="@+id/spinner"
                                                android:spinnerMode="dropdown" android:entries="@array/country_arrays"
                                                android:paddingTop="20dp" android:paddingBottom="20dp" android:paddingLeft="20dp"
                                                android:prompt="@string/car_prompt"
                                        />
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/tab2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:orientation="vertical">

                            <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                              android:orientation="vertical">
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                    >
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:inputType="textPersonName"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText5" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:hint="Element"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp">
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:inputType="numberDecimal"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText6" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:hint="Cena"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp">
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:inputType="textPersonName"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText7" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:hint="kolejny"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                            android:layout_marginBottom="20dp">
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText8" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:inputType="numberDecimal"
                                                android:hint="Cena"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/tab3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                            <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                              android:orientation="vertical">
                                    <Switch
                                            android:text="Wyłącz/ Włącz"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" android:id="@+id/switch2"
                                            android:layout_marginRight="20dp" android:layout_marginLeft="20dp"
                                            android:layout_marginTop="20dp"/>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                    >
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:inputType="textPersonName"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText9" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:hint="Nazwa warsztatu"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp">
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:inputType="numberDecimal"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText10" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:hint="Adres"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                            android:layout_marginBottom="20dp">
                                        <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ems="10"
                                                android:background="@android:color/transparent"
                                                android:textCursorDrawable="@null"
                                                android:id="@+id/editText12" android:paddingLeft="20dp"
                                                android:paddingRight="20dp" android:paddingTop="20dp"
                                                android:paddingBottom="20dp" android:inputType="numberDecimal"
                                                android:hint="Cena"
                                                android:textColor="@color/colorEdittext"/>
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/tab4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                            <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp">
                                <TextView
                                        android:text="Zdjęcia:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView25"/>
                                <TextView
                                        android:text="(6):"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView26"/>
                            </TableRow>
                            <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                            </TableRow>
                            <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView10"/>
                            </TableRow>
                            <android.support.design.widget.CoordinatorLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp">

                                <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_local_see_black_48dp" android:id="@+id/imageButton"
                                        android:layout_gravity="center_horizontal|center"
                                        android:background="@color/colorPrimary"/>
                            </android.support.design.widget.CoordinatorLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>
            <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <Button
                        android:text="Anuluj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cancell" android:layout_gravity="bottom|end"
                        android:layout_marginRight="120dp" android:textColor="@color/colorEvent"
                        android:background="@color/colorAllert"/>
                <Button
                        android:text="Zapisz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/save"
                        android:layout_marginRight="20dp" android:layout_gravity="bottom|right|end"
                        android:background="@color/colorEdittext" android:textColor="@color/colorEvent"/>
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
