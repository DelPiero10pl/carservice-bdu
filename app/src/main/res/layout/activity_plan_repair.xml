<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_plan_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.PlanRepair"
        android:orientation="vertical">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@color/colorPrimary">
        <TextView
                android:text="Planowane serwisowanie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                android:textColor="@color/colorEvent" android:textSize="18sp"
                android:paddingTop="10dp" android:paddingLeft="10dp"/>
    </TableRow>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/planed_list"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal" app:srcCompat="@drawable/ic_add_white_24dp" android:id="@+id/addplanrepairFAButton"
                app:backgroundTint="@color/colorPrimary" android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" android:layout_gravity="bottom|right|end"/>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
