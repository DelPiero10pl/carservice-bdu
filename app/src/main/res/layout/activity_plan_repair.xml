<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_plan_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.PlanRepair"
        android:orientation="vertical">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@color/colorPrimary">
        <TextView
                android:text="Planowane serwisowanie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                android:textColor="@color/colorEvent" android:textSize="18sp"
                android:paddingTop="10dp" android:paddingLeft="10dp"/>
    </TableRow>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:nestedScrollingEnabled="false"
                android:clickable="true"
                android:id="@+id/servicecard"
                android:longClickable="false">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                        android:paddingTop="10dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Wymiana oleju"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/servicingname" android:textStyle="bold"
                                android:textSize="15sp" android:layout_weight="1"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                >
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Data:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView1"
                                android:paddingTop="5dp" android:layout_weight="1" android:paddingRight="5dp"/>
                        <TextView
                                android:text="12.12.2012"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView19"
                                android:layout_weight="1" android:paddingRight="5dp"/>
                        <TextView
                                android:text="Przebieg: "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView20"
                                android:layout_weight="1" android:paddingRight="5dp"/>
                        <TextView
                                android:text="99999 km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView21"
                                android:layout_weight="1"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingBottom="10dp">
                    <TextView
                            android:text="Części:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView18" android:paddingRight="5dp"/>
                    <TextView
                            android:text="1700 PLN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView22" android:paddingRight="5dp"/>
                    <TextView
                            android:text="Warsztat:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView23" android:paddingRight="5dp"/>
                    <TextView
                            android:text="500 PLN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView24"/>
                </TableRow>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal" app:srcCompat="@drawable/ic_add_white_24dp" android:id="@+id/addplanrepairFAButton"
                app:backgroundTint="@color/colorPrimary" android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" android:layout_gravity="bottom|right|end"/>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
