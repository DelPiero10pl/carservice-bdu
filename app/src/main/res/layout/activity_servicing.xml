<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_servicing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.Servicing"
        android:orientation="vertical">


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="38dp" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:paddingTop="10dp" android:background="@color/colorPrimary">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Ford"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                    android:textSize="15sp" android:paddingLeft="5dp" android:layout_weight="1"
                    android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="Sierra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:paddingLeft="5dp"
                    android:textStyle="bold" android:textSize="15sp" android:layout_weight="1"
                    android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="|"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:paddingLeft="5dp"
                    android:paddingRight="5dp" android:layout_weight="1" android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="Rok: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:textSize="12sp"
                    android:layout_weight="1" android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="1991"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="12sp"
                    android:layout_weight="1" android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="|"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:paddingLeft="5dp"
                    android:paddingRight="5dp" android:layout_weight="1" android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="Przebieg:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:textSize="12sp"
                    android:layout_weight="1" android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="1000000 km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:textSize="12sp"
                    android:layout_weight="1" android:textColor="@color/colorEvent"/>
        </LinearLayout>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="38dp" android:paddingLeft="20dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" android:background="@color/colorPrimary">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/engine" android:id="@+id/imageView"
                    android:layout_weight="1"/>
            <TextView
                    android:text="1.8 TD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="12sp"
                    android:paddingTop="5dp" android:paddingLeft="5dp" android:layout_weight="1"
                    android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="Paliwo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:textSize="12sp"
                    android:paddingTop="5dp" android:paddingLeft="15dp" android:layout_weight="1"
                    android:textColor="@color/colorEvent"/>
            <TextView
                    android:text="ON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView17" android:textSize="12sp"
                    android:paddingTop="5dp" android:paddingLeft="5dp" android:layout_weight="1"
                    android:textColor="@color/colorEvent"/>
        </LinearLayout>
    </TableRow>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:nestedScrollingEnabled="false"
                        android:clickable="true"
                        android:id="@+id/servicecard"
                        android:longClickable="false">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                                android:paddingTop="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Remont silnika"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/servicingname" android:textStyle="bold"
                                        android:textSize="15sp" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                        >
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Data:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView1"
                                        android:paddingTop="5dp" android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="12.12.2012"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView19"
                                        android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="Przebieg: "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView20"
                                        android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="99999 km"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView21"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingBottom="10dp">
                            <TextView
                                    android:text="Części:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView18" android:paddingRight="5dp"/>
                            <TextView
                                    android:text="1700 PLN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView22" android:paddingRight="5dp"/>
                            <TextView
                                    android:text="Warsztat:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView23" android:paddingRight="5dp"/>
                            <TextView
                                    android:text="500 PLN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView24"/>
                        </TableRow>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:nestedScrollingEnabled="false"
                        android:clickable="false"
                        android:id="@+id/partscard"
                        android:longClickable="false">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                                android:paddingTop="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Części"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/parts" android:textStyle="bold"
                                        android:textSize="15sp" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                                android:paddingTop="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Silnik"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/part" android:textStyle="bold"
                                        android:textSize="15sp" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                        >
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Cena:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView1"
                                        android:paddingTop="5dp" android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="900 PLN"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView19"
                                        android:layout_weight="1" android:paddingRight="5dp"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingBottom="10dp">
                            <TextView
                                    android:text="Zdjęcia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView18" android:paddingRight="5dp"/>
                            <TextView
                                    android:text="(2):"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView22" android:paddingRight="5dp"/>
                        </TableRow>
                        <TableRow
                                android:layout_width="154dp"
                                android:layout_height="110dp" android:layout_marginLeft="20dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView6" android:layout_weight="1"/>
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView3" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:nestedScrollingEnabled="false"
                        android:clickable="false"
                        android:id="@+id/workshopcard"
                        android:longClickable="false">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                                android:paddingTop="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Warsztat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/workshop" android:textStyle="bold"
                                        android:textSize="15sp" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                                android:paddingTop="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Diupla Zbycha S.A"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/workshopname" android:textStyle="bold"
                                        android:textSize="15sp" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                        >
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Lokalizacja:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView1"
                                        android:paddingTop="5dp" android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="ul. Leśna 33, Krosno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView19"
                                        android:layout_weight="1" android:paddingRight="5dp"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="166dp"
                                android:layout_height="72dp" android:paddingLeft="20dp" android:paddingBottom="10dp">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" app:srcCompat="@drawable/mapexample"
                                    android:id="@+id/imageView7"/>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingRight="10dp"
                        >
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Cena:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView1"
                                        android:paddingTop="5dp" android:layout_weight="1" android:paddingRight="5dp"/>
                                <TextView
                                        android:text="900 PLN"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView19"
                                        android:layout_weight="1" android:paddingRight="5dp"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingBottom="10dp">
                            <TextView
                                    android:text="Zdjęcia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView32" android:paddingRight="5dp"/>
                            <TextView
                                    android:text="(2):"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView31" android:paddingRight="5dp"/>
                        </TableRow>
                        <TableRow
                                android:layout_width="154dp"
                                android:layout_height="110dp" android:layout_marginLeft="20dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView5" android:layout_weight="1"/>
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/enginetrst"
                                        android:id="@+id/imageView4" android:layout_weight="1"/>
                            </LinearLayout>
                        </TableRow>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal" app:srcCompat="@drawable/ic_edit_white_18dp" android:id="@+id/floatingActionButton"
                app:backgroundTint="@color/colorPrimary" android:layout_gravity="bottom|right|end"
                android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
