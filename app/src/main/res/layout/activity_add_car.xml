<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_add_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.AddCar"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:layout_marginTop="20dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_directions_car_black_36dp"
                            android:id="@+id/imageView2" android:paddingLeft="10dp"/>
                    <TextView
                            android:text="Nowy samochód ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView" android:paddingLeft="10dp"
                            android:paddingTop="10dp" android:textColor="@color/colorText" android:textSize="18sp"
                    />
                </LinearLayout>
            </TableRow>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/mark"
                            android:background="@android:color/transparent"
                            android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:textColorLink="@color/colorAccent" android:hint="Marka"
                            android:textColor="@color/colorEdittext"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mic_black_24dp"
                            android:id="@+id/imageView8" android:layout_weight="1"
                            android:clickable="true" android:paddingTop="20dp"/>
                </TableRow>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/model"
                            android:background="@android:color/transparent"
                            android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:textColorLink="@color/colorAccent" android:hint="Model"
                            android:textColor="@color/colorEdittext"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mic_black_24dp"
                            android:id="@+id/imageView9" android:layout_weight="1"
                            android:clickable="true" android:paddingTop="20dp"/>
                </TableRow>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/year"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Rocznik"
                        android:textColor="@color/colorEdittext" android:inputType="date"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/engine"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Śilnik"
                        android:textColor="@color/colorEdittext" android:inputType="numberDecimal"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/mileage"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Przebieg"
                        android:textColor="@color/colorEdittext" android:inputType="number"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/fuel_type"
                        android:spinnerMode="dropdown"
                        android:paddingTop="20dp" android:paddingBottom="20dp" android:paddingLeft="20dp"
                        android:prompt="@string/car_prompt"
                        android:entries="@array/fuel_array"/>
            </android.support.v7.widget.CardView>
            <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp">

                <Button
                        android:text="Anuluj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cancel" android:layout_gravity="bottom|end"
                        android:layout_marginRight="120dp" android:textColor="@color/colorEvent"
                        android:background="@color/colorAllert"/>
                <Button
                        android:text="Zapisz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/save"
                        android:layout_marginRight="20dp" android:layout_gravity="bottom|right|end"
                        android:background="@color/colorEdittext" android:textColor="@color/colorEvent"/>
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
