<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cars.ui.AddRepair"
        android:orientation="vertical"
        android:focusable="true" android:focusableInTouchMode="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_book_indigo_900_24dp"
                        android:id="@+id/imageView2"/>
                <TextView
                        android:text="Planowanie Serwisu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView"/>
            </TableRow>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="60dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editText"
                            android:background="@android:color/transparent"
                            android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:textColorLink="@color/colorAccent" android:hint="Name"
                            android:textColor="@color/colorEdittext"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mic_black_24dp"
                            android:id="@+id/imageView8" android:layout_weight="1"
                            android:clickable="true" android:paddingTop="20dp"/>
                </TableRow>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText1"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Data"
                        android:textColor="@color/colorEdittext"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Element?"
                        android:textColor="@color/colorEdittext"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText4"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Kolejny"
                        android:textColor="@color/colorEdittext"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null" android:paddingTop="20dp" android:paddingBottom="20dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:textColorLink="@color/colorAccent" android:hint="Przebieg"
                        android:textColor="@color/colorEdittext"/>
            </android.support.v7.widget.CardView>
            <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp">

                <Button
                        android:text="Anuluj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cancell" android:layout_gravity="bottom|end"
                        android:layout_marginRight="120dp" android:textColor="@color/colorEvent"
                        android:background="@color/colorAllert"/>
                <Button
                        android:text="Zapisz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/save"
                        android:layout_marginRight="20dp" android:layout_gravity="bottom|right|end"
                        android:background="@color/colorEdittext" android:textColor="@color/colorEvent"/>
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
