<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_home"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorBg"
        tools:context="com.cars.ui.Home" android:layout_width="match_parent" android:weightSum="1">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_height="173dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.39" android:weightSum="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/car_count" android:layout_weight="1"
                    android:gravity="right"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/total_cost" android:layout_weight="1"
                    android:gravity="right"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView2" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">

            <TableRow android:layout_width="match_parent" android:layout_height="100dp"
                      android:gravity="center">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:text="Samochód"
                            android:layout_height="80dp"
                            android:layout_marginTop="17dp"
                            android:id="@+id/carbutton"
                            android:drawableTop="@drawable/car"
                            android:layout_width="130dp" android:background="@color/colorEvent"
                            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp" android:layout_marginBottom="10dp"
                            android:paddingTop="10dp"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:text="Planowane"
                            android:layout_marginTop="17dp"
                            android:id="@+id/planrepairbutton"
                            android:drawableTop="@drawable/plan"
                            android:layout_width="130dp" android:background="@color/colorEvent"
                            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp" android:layout_marginBottom="10dp"
                            android:layout_height="80dp" android:paddingTop="10dp"/>
                </FrameLayout>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="100dp" android:paddingTop="5dp"
                      android:gravity="center">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:text="Wydatki"
                        android:layout_height="80dp"
                        android:layout_marginTop="17dp"
                        android:id="@+id/costbutton"
                        android:drawableTop="@drawable/wallet"
                        android:layout_width="130dp" android:background="@color/colorEvent"
                        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp" android:layout_marginBottom="10dp" android:paddingTop="10dp"/>
                </FrameLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:text="Ustwieńia"
                            android:layout_height="80dp"
                            android:layout_marginTop="17dp"
                            android:id="@+id/settingsbutton"
                            android:drawableTop="@drawable/config"
                            android:layout_width="130dp" android:background="@color/colorEvent"
                            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp" android:layout_marginBottom="10dp" android:paddingTop="10dp"/>
                </FrameLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
